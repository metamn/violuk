{
  "breakpoints": [
    {
      "name": "mobile",
      "value": "768px",
      "description": "Screens smaller than 768px"
    },
    {
      "name": "tablet",
      "value": "1024px",
      "description": "Screens bigger than 768px and smaller than 1024px"
    },
    {
      "name": "desktop",
      "value": "1600px",
      "description": "Screens larger than 1600px"
    },
    {
      "name": "ie",
      "value": "n/a",
      "description": "IE 10/11"
    },
    {
      "name": "osx",
      "value": "n/a",
      "description": "Mac / OSX"
    }
  ],
  "responsive_mixins": [
    {
      "name": "osx",
      "media_query": "(-webkit-max-device-pixel-ratio:1) and (min-color-index:0)"
    },
    {
      "name": "notosx",
      "media_query": "(-webkit-max-device-pixel-ratio:1)",
      "media_query_prefix": "not all and"
    },
    {
      "name": "ie",
      "media_query": "(-ms-high-contrast: none), (-ms-high-contrast: active)"
    },
    {
      "name": "portrait",
      "media_query": "(orientation: portrait)"
    },
    {
      "name": "landscape",
      "media_query": "(orientation: landscape)"
    },
    {
      "name": "mobile",
      "media_query": "(max-width: $breakpoint-mobile - 0.1)"
    },
    {
      "name": "mobile-and-up",
      "media_query": "(min-width: $breakpoint-mobile)"
    },
    {
      "name": "tablet",
      "media_query": "(min-width: $breakpoint-mobile) and (max-width: $breakpoint-tablet)"
    },
    {
      "name": "ipad-pro",
      "media_query": "(min-width: $breakpoint-tablet) and (orientation: portrait)"
    },
    {
      "name": "laptop",
      "media_query": "(min-width: $breakpoint-tablet + 0.1) and (max-width: $breakpoint-desktop)"
    },
    {
      "name": "desktop",
      "media_query": "(min-width: $breakpoint-desktop + 0.1)"
    }
  ]
}
