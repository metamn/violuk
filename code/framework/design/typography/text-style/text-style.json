{
  "text_styles": [
    {
      "name": "Default",
      "description": "The basic settings for a text.",
      "based_on": "Mostra Nuova",
      "mixins": [
        {
          "name": "font",
          "value": "mostra-nuova-regular"
        },
        {
          "name": "scale",
          "value": "default"
        },
        {
          "name": "colors",
          "value": "black-on-white"
        }
      ],
      "properties": [
        {
          "name": "letter-spacing",
          "value": "1px"
        }
      ]
    },
    {
      "name": "Body text",
      "description": "Settings for text blocks.",
      "based_on": "Mostra Nuova",
      "mixins": [
        {
          "name": "p"
        }
      ],
      "properties": [
        {
          "name": "max-width",
          "value": "25em"
        }
      ]
    },
    {
      "name": "Article body text",
      "description": "Settings for very long text.",
      "based_on": "Mostra Nuova",
      "mixins": [
        {
          "name": "font",
          "value": "mostra-nuova-light"
        },
        {
          "name": "scale",
          "value": "large-1"
        },
        {
          "name": "p"
        },
        {
          "name": "h2"
        },
        {
          "name": "h3"
        },
        {
          "name": "a"
        },
        {
          "name": "ol"
        },
        {
          "name": "ul--body-text"
        },
        {
          "name": "blockquote"
        },
        {
          "name": "image"
        },
        {
          "name": "gist"
        },
        {
          "name": "article-body-text"
        },
        {
          "name": "code"
        },
        {
          "name": "pre"
        }
      ]
    },
    {
      "name": "Logo",
      "description": "Settings for the logo.",
      "based_on": "Platelet",
      "mixins": [
        {
          "name": "font",
          "value": "platelet-regular"
        },
        {
          "name": "scale",
          "value": "large-1"
        }
      ]
    },
    {
      "name": "Title",
      "description": "Title",
      "based_on": "Mostra Nuova",
      "mixins": [
        {
          "name": "uppercase",
          "value": "$lem"
        },
        {
          "name": "word-wrap",
          "value": ""
        }
      ],
      "properties": [
        {
          "name": "line-height",
          "value": "2.96"
        }
      ]
    },
    {
      "name": "Name",
      "description": "A person's name",
      "based_on": "Mostra Nuova Bold",
      "mixins": [
        {
          "name": "font",
          "value": "mostra-nuova-bold"
        },
        {
          "name": "uppercase",
          "value": "$lem / 4"
        },
        {
          "name": "scale",
          "value": "small-1"
        },
        {
          "name": "colors",
          "value": "white-on-black"
        },
        {
          "name": "link",
          "value": "white-on-black"
        }
      ],
      "properties": [
        {
          "name": "padding",
          "value": "$lem / 8 $lem / 4"
        }
      ]
    },
    {
      "name": "Figcaption",
      "description": "The caption of a figure, code block etc.",
      "based_on": "Mostra Nuova Light",
      "mixins": [
        {
          "name": "font",
          "value": "mostra-nuova-light"
        },
        {
          "name": "scale",
          "value": "small-1"
        },
        {
          "name": "colors",
          "value": "black-on-white"
        }
      ]
    },
    {
      "name": "Button with triangle",
      "description": "Strong text, call for action.",
      "based_on": "Mostra Nuova Black",
      "mixins": [
        {
          "name": "font",
          "value": "mostra-nuova-black"
        },
        {
          "name": "uppercase",
          "value": "1.25px"
        },
        {
          "name": "colors",
          "value": "white-on-black"
        }
      ],
      "properties": [
        {
          "name": "padding",
          "value": "$lem / 2 $lem"
        }
      ]
    },
    {
      "name": "Button with arrow triangle",
      "description": "Strong text, call for action.",
      "based_on": "Mostra Nuova Black",
      "mixins": [
        {
          "name": "font",
          "value": "mostra-nuova-black"
        },
        {
          "name": "uppercase",
          "value": "1.25px"
        },
        {
          "name": "border",
          "value": "normal, all"
        }
      ],
      "properties": [
        {
          "name": "padding",
          "value": "$lem / 2 $lem"
        },
        {
          "name": "transform",
          "value": "translateX($lem)"
        }
      ]
    }
  ]
}
